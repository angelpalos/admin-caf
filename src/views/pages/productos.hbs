  <div class="buscador">
    <!--con la funcion buscar se buscan los articulos del menu-->
    <form action="/productos/productos/buscar" class="d-flex px-40" role="search" method="post" id="buscador">
      <input class="form-control me-2 w-50 " type="search" placeholder="Buscar" aria-label="Buscar" name="buscador">
      <button class="btn btn-dark btn-lg hover-red" type="submit">Buscar</button>
    </form>

  </div>



  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

      <!--creacion de cabla-->
      <table class="table">
        <thead class="table-dark">
          <!--color de la tabla-->
          <tr>
            <!--secciones en el encabezado de la tabla-->
            <th class="w-20 py-4 px-4 fs-5 ...">ID</th>
            <th class="w-1/4 py-4 fs-5 ...">Descripcion</th>
            <th class="w-25 py-4 fs-5">Tipo de Articulo</th>
            <th class="w-20 py-4 px-2 fs-5 ...">Precio</th>
            <th class="w-20 py-4 px-2 fs-5 ...">Costo</th>
            <th class="w-20 py-4 px-2 fs-5 ...">Unidad</th>
            <th class="w-40 py-4 px-5 fs-5 ...">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each pers}}
          <tr>
            <!--obtiene la informacion de la base de datos y la imprime en la tabla--->
            <td class="py-3 px-6 fs-4">{{id_producto}}</td>
            <td class="p-3 fs-4">{{name}}</td>
            <td class="p-3 fs-4">{{descripcion}}</td>
            <td class="p-3 fs-4">{{precio}}</td>
            <td class="p-3 fs-4">{{costo}}</td>
            <td class="p-3 fs-4">{{description}}</td>
            <td class="p-4 flex">
              <!--boton para eliminar producto con metodo delete-->
              <form action="/productos/delete" method="POST" class="mx-2">
                <input type="hidden" value="{{id_producto}}" name="id">
                <button class="bg-red-500 text-white px-3 py-1 rounded-sm h-10 w-10" type="submit">
                  <i class="fas fa-trash"></i></button>
              </form>
              <!--boton editar producto-->
              <a href="/productos/editprod/{{id_producto}}" class="bg-green-500 text-white px-3 py-2 rounded-sm h-10 w-10">
                <i class="fas fa-pen"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>