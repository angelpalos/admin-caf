<!--Indica la versión de HTML que se usó para escribir el documento e idioma.-->
<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--titulo de la pagina web-->
  <title>Metta Cafetery Administrador</title>
  <!-- Tailwind CSS Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">
  <!-- Fontawesome Link -->
  <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/2734/2734039.png">
</head>
<!--caracteristicas de la pagina web-->

<body class="bg-gray-200">
  <!--color del encabezado-->
  <div class="encabezado">
    <nav class="flex py-2 bg-white  px-0 ">
      <div class="w-100px px-12 mr-auto" href="/">
        <!--titulo del encabezado-->
        <a class="navbar-brand " href="/">
          <img class="d-inline-block align-top" src="https://cdn-icons-png.flaticon.com/512/2734/2734039.png" width="80"
            height="80">
          <div class="metta-cafetery">
            <span class="fs-4">Metta Cafetery</span>

          </div>

        </a>

      </div>

      <ul class="w-1/2 px-1 ml-auto flex justify-end pt-1">
        <!--si el nombre es correcto apareceran los siguientes 3 botones -->

        {{#if name}}


        <li class="nav-item px-4 mt-2">
          <!--boton que cierra sesion-->
          <a href="/logout" class="btn btn-outline-danger btn-lg">Logout</a>
        </li>
          
        <form action="">
          <select name="" onchange="location = this.value" class="btn btn-outline-primary dropdown-toggle btn-lg mt-2 mr-4">
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
              <option selected hidden>Reportes</option>
              <option value="c-rep-venta">Reporte de ventas</option>
              <option value="c-rep-detalle">Reporte de detalles</option>
              <option value="c-rep-trabajador">Reporte de trabajador</option>
              <option value="c-rep-producto">Reporte de producto</option>
            </ul>
          </select>
        </form>







        <li class="nav-item px-3 mt-2">
          <!--boton para ver los productos-->
          <a href="/productos" class="btn btn-outline-primary btn-lg">Productos</a>
        </li>
        <li class="nav-item px-3 mt-2">
          <!--boton para ir hacia el archivo de personal-->
          <a href="/pers" class="btn btn-outline-primary btn-lg">Personal</a>
        </li>
        <!--<img class="img-fluid" src="https://cdn.icon-icons.com/icons2/2483/PNG/512/user_icon_149851.png" width="60px" height="60px" />-->
        
        <i class="px-2 mt-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-person-circle"
            viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
            <path fill-rule="evenodd"
              d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
          </svg>
        </i>
        <h5 class="mt-3">
          <font  color="black" >{{name}}</font>
        </h5>
        <!--si no es correcto se mostrara el siguiente boton-->
        {{else}}

        {{/if}}

        {{#if pedi}}
        <li class="nav-item px-4">
          <!--boton que cierra sesion-->
          <a href="/logout" class="btn btn-outline-danger btn-lg">Logout</a>
        </li>
        <li class="nav-item px-4">
          <!--boton para ver los productos-->
          <a href="/productos" class="btn btn-outline-primary btn-lg">Productos</a>
        </li>
        <li class="nav-item px-4">
          <!--boton para ir hacia el archivo de personal-->
          <a href="/pers" class="btn btn-outline-primary btn-lg">Personal</a>
        </li>
        <!--<img class="img-fluid" src="https://cdn.icon-icons.com/icons2/2483/PNG/512/user_icon_149851.png" width="60px" height="60px" />-->
        <h6>
          <font size="3" color="black">{{name}}</font>
        </h6>
        <!--si no es correcto se mostrara el siguiente boton-->
        {{else}}

        {{/if}}
      </ul>
    </nav>

  </div>
  {{{body}}}
  <!--se cierran las etiquetas-->
</body>

</html>